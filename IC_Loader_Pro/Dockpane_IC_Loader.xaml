<UserControl x:Class="IC_Loader_Pro.Dockpane_IC_LoaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
             mc:Ignorable="d" 
             xmlns:helpers="clr-namespace:IC_Loader_Pro.Helpers"
             d:DataContext="{Binding Path=ui.Dockpane_IC_LoaderViewModel}"
             Background="{DynamicResource Esri_BackgroundBrush}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="10" IsEnabled="{Binding IsUIEnabled}">
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Cursor" Value="Wait" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Menu Grid.Column="0" VerticalAlignment="Center" Background="Transparent">
                <MenuItem Header="_Notes" Command="{Binding ShowNotesCommand}"/>
                <MenuItem Header="_Search" Command="{Binding SearchCommand}"/>
                <MenuItem Header="_Tools" Command="{Binding ToolsCommand}"/>
                <MenuItem Header="_Options" Command="{Binding OptionsCommand}"/>
            </Menu>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <ListBox ItemsSource="{Binding PublicListOfIcEmailTypeSummaries}" SelectedItem="{Binding SelectedIcType}" BorderThickness="0" Background="Transparent">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ToggleButton Style="{DynamicResource Esri_ButtonToggle}" Margin="2,0"  MinWidth="75"  IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Mode=TwoWay}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}"/>
                                    <TextBlock Text="{Binding EmailCount, StringFormat=' ({0})'}" Foreground="{DynamicResource Esri_Gray130Brush}"/>
                                </StackPanel>
                            </ToggleButton>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button Content="Refresh" Command="{Binding RefreshQueuesCommand}" ToolTip="Refresh Queues" Margin="5,0,0,0" Width="80"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Height="1" Background="{DynamicResource Esri_Gray55Brush}" Margin="0,5"/>

        <Grid Grid.Row="2" Margin="5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{Binding CurrentEmailSubject, FallbackValue='No email selected'}" FontWeight="Bold" TextTrimming="CharacterEllipsis" ToolTip="{Binding CurrentEmailSubject}" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="Pref ID:" Margin="10,0,5,0" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="2" Text="{Binding CurrentPrefId, FallbackValue='N/A'}" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="3" Text="Del ID:" Margin="10,0,5,0" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="4" Text="{Binding CurrentDelId, FallbackValue='N/A'}" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{Binding StatusMessage, FallbackValue='Ready'}" VerticalAlignment="Center" Margin="5,0"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Passed:" Margin="15,0,5,0" Foreground="{DynamicResource Esri_Gray130Brush}"/>
                <TextBlock Text="{Binding SelectedIcType.PassedCount, FallbackValue='0'}" Margin="0,0,15,0" FontWeight="SemiBold"/>
                <TextBlock Text="Skipped:" Margin="0,0,5,0" Foreground="{DynamicResource Esri_Gray130Brush}"/>
                <TextBlock Text="{Binding SelectedIcType.SkippedCount, FallbackValue='0'}" Margin="0,0,15,0" FontWeight="SemiBold"/>
                <TextBlock Text="Rejected:" Margin="0,0,5,0" Foreground="{DynamicResource Esri_Gray130Brush}"/>
                <TextBlock Text="{Binding SelectedIcType.FailedCount, FallbackValue='0'}" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Height="1" Background="{DynamicResource Esri_Gray55Brush}" Margin="0,5"/>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Shapes to Review" Margin="0,0,2,0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                        <CheckBox Content="Show Valid" IsChecked="{Binding ShowValid}" Margin="0,0,10,0"/>
                        <CheckBox Content="Show Invalid" IsChecked="{Binding ShowInvalid}" Margin="0,0,10,0"/>
                    </StackPanel>

                    <DataGrid helpers:DataGridSelectedItemsBehavior.SelectedItems="{Binding SelectedShapesForReview}"
                      ItemsSource="{Binding ShapesToReview}" 
                      SelectedItem="{Binding SelectedShapeForReview}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionMode="Extended">
                        
                        <DataGrid.InputBindings>
                            <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding ZoomToSelectedReviewShapeCommand}"/>
                        </DataGrid.InputBindings>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Source File" Binding="{Binding SourceFile}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                            <DataGridTextColumn Header="Area" Binding="{Binding Area, StringFormat={}{0:F2}}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </DockPanel>
            </GroupBox>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5,0">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="65"/>
                        <Setter Property="Margin" Value="0,2"/>
                    </Style>
                </StackPanel.Resources>

                <Button Command="{Binding ZoomToAllCommand}" ToolTip="Zoom to all shapes in both lists">
                    <TextBlock Text="Zoom to All" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <Button Command="{Binding ZoomToSiteCommand}" ToolTip="Zoom to the associated site location">
                    <TextBlock Text="Zoom to Site" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>

                <Separator Margin="0,10"/>

                <Button Command="{Binding AddSelectedShapeCommand}" ToolTip="Add selected to use" Content=">"/>
                <Button Command="{Binding RemoveSelectedShapeCommand}" ToolTip="Remove selected from use" Content="&lt;"/>
                <Button Command="{Binding AddAllShapesCommand}" ToolTip="Add all to use" Content="&gt;&gt;"/>
                <Button Command="{Binding RemoveAllShapesCommand}" ToolTip="Remove all from use" Content="&lt;&lt;"/>

                <Separator Margin="0,10"/>

                <Button Command="{Binding ClearSelectionCommand}" ToolTip="Clear selections in both lists">
                    <TextBlock Text="Clear Selection" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <Button Command="{Binding HideSelectionCommand}" ToolTip="Hide selected shapes on the map">
                    <TextBlock Text="Hide Selection" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <Button Command="{Binding UnhideAllCommand}" ToolTip="Show all shapes on the map">
                    <TextBlock Text="Unhide All" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
            </StackPanel>

            <GroupBox Grid.Column="2" Header="Selected Shapes to Use" Margin="2,0,0,0">
                <DataGrid helpers:DataGridSelectedItemsBehavior.SelectedItems="{Binding SelectedShapesToUse}"
                  ItemsSource="{Binding SelectedShapes}" 
                  SelectedItem="{Binding SelectedShapeToUse}"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Extended">

                    <DataGrid.InputBindings>
                        <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding ZoomToSelectedUseShapeCommand}"/>
                    </DataGrid.InputBindings>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Source File" Binding="{Binding SourceFile}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                        <DataGridTextColumn Header="Area" Binding="{Binding Area, StringFormat={}{0:F2}}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <Border Grid.Row="5" Height="1" Background="{DynamicResource Esri_Gray55Brush}" Margin="0,5"/>

        <GroupBox Grid.Row="6" Header="Files Submitted" Margin="0,5,0,0">
            <ListView ItemsSource="{Binding FoundFileSets}" AlternationCount="2">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="ToolTip" Value="{Binding ExtensionsTooltip}"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="{DynamicResource Esri_Gray10Brush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="File Name" DisplayMemberBinding="{Binding FileName}" Width="200"/>
                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding FileSetType}" Width="100"/>
                        <GridViewColumn Header="Valid" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsValid}" Value="True">
                                                        <Setter Property="Content">
                                                            <Setter.Value>
                                                                <Path Data="M 2,5 L 5,8 L 11,2" Stroke="Green" StrokeThickness="2"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsValid}" Value="False">
                                                        <Setter Property="Content">
                                                            <Setter.Value>
                                                                <Path Data="M 2,2 L 8,8 M 8,2 L 2,8" Stroke="Red" StrokeThickness="2"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Show Results" Command="{Binding ShowResultsCommand}" 
            HorizontalAlignment="Left" Margin="0,10,0,0"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Command="{Binding SaveCommand}" Style="{DynamicResource Esri_ButtonSuccess}" Margin="5,0" Width="80"/>
                <Button Content="Skip" Command="{Binding SkipCommand}" Margin="5,0" Width="80"/>
                <Button Content="Reject" Command="{Binding RejectCommand}" Style="{DynamicResource Esri_ButtonDanger}" Margin="5,0" Width="80"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>