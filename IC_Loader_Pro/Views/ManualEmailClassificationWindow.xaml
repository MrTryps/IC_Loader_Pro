<Window x:Class="IC_Loader_Pro.Views.ManualEmailClassificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Identify Email Type" Height="400" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="The email type could not be determined automatically. Please select the correct type below." TextWrapping="Wrap" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Sender:" FontWeight="Bold" Margin="0,0,10,5"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Sender}" TextTrimming="CharacterEllipsis"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Subject line:" FontWeight="Bold" Margin="0,0,10,5"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Subject}" TextTrimming="CharacterEllipsis"/>

        <GroupBox Header="Attachments" Grid.Row="3" Grid.ColumnSpan="2" Margin="0,10">
            <ListView ItemsSource="{Binding AttachmentFileNames}" MaxHeight="100"/>
        </GroupBox>

        <Button Grid.Row="4" Grid.ColumnSpan="2" 
                Content="View Original Email in Outlook" 
                Command="{Binding ViewEmailCommand}" 
                HorizontalAlignment="Center" Margin="0,5"/>

        <ComboBox Grid.Row="5" Grid.ColumnSpan="2" ItemsSource="{Binding AvailableEmailTypes}" SelectedItem="{Binding SelectedEmailType}" VerticalAlignment="Center" Margin="0,15,0,0"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Move to Junk" Width="110" Click="JunkButton_Click" Margin="0,0,20,0" Background="#FFFBF0B2"/>
            <Button Content="Use this Type" Width="120" IsDefault="True" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>